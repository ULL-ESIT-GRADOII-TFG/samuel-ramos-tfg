- var aula = classroom
- var tarea = assign
doctype html

html
  include ../layouts/headParams.pug
  body
    include ../layouts/nav.pug       
    div(class="container")
      div(class="row")
        div(class="col s12", id="space") 
          p(align="center" class="ftxt") Haga click en el siguiente botón para copiar el enlace de invitación a #{aula}
        div(class="col s12", id="ispace")         
          p(align="center" class="ftxt") 
            span(class="iispace") http://localhost:8081/invitation/#{aula}
            button(id="btn" class="button button-circle white-text light-blue darken-4", data-clipboard-text="http://localhost:8081/invitation/" + aula): i(class="octicon octicon-clippy iicons")
        div(align="center" class="col s12", id="ispace") 
          div(class="col s3")
          div(class="col s3")
            p(align="center" class="ftxt") Haga click para crear una asignacion individual
          div(class="col s3")
            p(align="center" class="ftxt") Haga click para crear una asignacion grupal
          div(class="col s3")
        div(align="center" class="col s12", id="ispace") 
          div(class="col s3")
          div(class="col s3")
            a(href="/new/"+ aula class="waves-effect waves-light btn-large white-text light-blue darken-4") Asignacion 
              i(class="octicon octicon-person")
          div(class="col s3")
            a(class="waves-effect waves-light btn-large white-text light-blue darken-4") Asignacion 
              i(class="octicon octicon-organization")
          div(class="col s3")
          div(class="col s12", id="ispace")   
            h4(align="center" class="fclass") Tareas 
          div(class="col s12", id="ispace") 
          div(class="col s6")
            p(align="center" class="ftxt")  Tarea
          div(class="col s6")
            p(align="center" class="ftxt")  Enlace de invitación
          div(class="col s12")
            if tarea
              each i in tarea
                div(class="col s6")
                  p(align="center" class="ftxt")  
                    a(href="/assign/"+ aula + "/" + i.titulo) 
                      i(class="octicon octicon-" + i.assignType)
                      span  #{i.titulo} 
                div(class="col s6")
                  p(align="center" class="ftxt") 
                    span(class="iispace") http://localhost:8081/assigninvitation/#{aula}#{i.titulo}
                
              else
                div(align="center" class="col s12")
                  p(class="noclass") No tiene tareas activas.      
            else   
              div(align="center" class="col s12")
                p(class="noclass") No tiene tareas activas.  

    include ../layouts/footerParams.pug
    script(type="text/javascript", src="../js/copy.js")
