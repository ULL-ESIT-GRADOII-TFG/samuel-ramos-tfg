- var aula = classroom
- var active = activado
doctype html

html
  include ../layouts/headParams.pug
  body
    include ../layouts/nav.pug
    div(class="container")
      div(class="row")
      div(class="col s12", id="ispace")
        p(align="center" class="ftxt") Haga click para activar y desactivar las invitaciones
          form(class="col s12" method="post" action="/options/" + aula)
            div(align="center" class="col s12 switch")
              label
                span Desactivadas
                input(type="checkbox" name="activador" checked)
                span(class="lever")
                span Activadas
            div(align="center" class="col s12", id="ispace")
              button(class="btn-large waves-effect waves-light white-text light-blue darken-4" type="submit") Enviar
                i(class="material-icons right") send

    include ../layouts/footerParams.pug
