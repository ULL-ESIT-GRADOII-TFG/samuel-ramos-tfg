- var classrooms = aulas
doctype html

html
  include ../layouts/head.pug
  body
    include ../layouts/nav.pug
    div(class="container")
      div(class="row")
        div(class="col s12", id="space")
          div(class="tabs is-centered")
            ul
              li(class="is-active" id="butpindiv" class=""): a(href="/classrooms") Aula
              li(id="butoptions" class=""): a(href="/orgs") Nueva aula
          div(class="col s12")
          if classrooms
            each i in classrooms
              div(class="col s6 offset-s3")
                div(class="card horizontal")
                  div(class="card-image")
                    img(class="responsive-img", src="" + i.avatarUrl)
                  div(class="card-stacked")
                    div(class="card-content ftxt")
                      p #{i.login}
                      a(href="https://github.com/orgs/" + i.login + "/people") Enlace a miembros
                        i(class="octicon octicon-person aicons")
                      p(id="aspace")
                      a(href="https://github.com/orgs/" + i.login) Enlace a repos
                        i(class="octicon octicon-repo aicons")
                    div(class="card-action")
                      a(href="/classroom/" + i.login class="blue-text text-darken-4") Asginaciones
            else
              div(align="center" class="col s12")
                p(class="noclass") No tiene aulas activas.      
          else   
            div(align="center" class="col s12")
              p(class="noclass") No tiene aulas activas.  
                  
    include ../layouts/footer.pug
