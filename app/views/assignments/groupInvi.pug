- var tarea = assign
- var aula = classroom
- var teams = equipos
doctype html

html
  include ../layouts/headParams2.pug
  body
    include ../layouts/nav.pug       
    div(class="container")
      div(class="row")
        div(class="col s12", id="space")  
        div(align="center" class="col s12")  
          if teams.length !=0
            p(class="ltext") Haga click 
              a(href="/newteam/"+ aula + "/" + tarea) aqui 
              span para crear un equipo nuevo  
            div(class="col s12" id="ispace")
            form(class="col s10 offset-s3" method="post")
              div(class="input-field col s7")
                select(name="team")                  
                  each i in teams
                    option(value="" + i.name) #{i.name}
                label Equipos
              div(class="col s12" id="fspace")
                div(align="center" class="col s3")
                  button(class="btn-large waves-effect waves-light white-text light-blue darken-4" type="submit") Enviar
                    i(class="material-icons right") send
                div(align="center" class="col s4")
                  a(href="/classroom/" + aula class="btn-large waves-effect waves-light white-text red") Cancel
                    i(class="material-icons right") cancel
                div(align="center" class="col s5") 
          else 
            p(class="ftxt") No tienes equipos creados, haga click en el siguiente bot√≥n para crear un equipo nuevo  
            div(align="center" class="col s12" id="ispace")  
              a(href="/newteam/"+ aula + "/" + tarea class="waves-effect waves-light btn-large light-blue darken-4") Nuevo equipo
              
                   
    include ../layouts/footerParams2.pug
